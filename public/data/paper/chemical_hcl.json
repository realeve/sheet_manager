  "table": "paper_material_chemical_hcl",
  "detail": [
    {
      "title": "基础数据",
      "detail": [
        {
          "title": "产品名称",
          "type": "label",
          "key": "prod_name",
          "value": "盐酸",
          "scope": [
            {
              "key": "acidity",
              "min": 31
            }
          ]
        },
        {
          "title": "产地",
          "type": "input",
          "key": "place",
          "rule": {
            "required": true,
            "msg": "请输入产地信息"
          },
          "placeholder": "请输入产地信息",
          "maxLength": 8,
          "unReset": true
        },
        {
          "title": "批号",
          "type": "input",
          "key": "batch_no",
          "rule": {
            "required": true,
            "msg": "请输入批号"
          },
          "placeholder": "请输入批号",
          "toupper": "true"
        },
        {
          "title": "数量",
          "type": "input",
          "key": "prod_num",
          "rule": {
            "type": "float",
            "required": true,
            "msg": "请输入数量"
          },
          "suffix": "件"
        },
        {
          "title": "生产日期",
          "type": "datepicker",
          "key": "prod_date",
          "datetype": "YYYY-MM-DD",
          "rule": {
            "required": true
          },
          "unReset": true
        },
        {
          "title": "取样日期",
          "type": "datepicker",
          "key": "sample_date",
          "datetype": "YYYY-MM-DD",
          "rule": {
            "required": true
          },
          "unReset": true
        },
        {
          "title": "检测日期",
          "type": "datepicker",
          "key": "test_date",
          "datetype": "YYYY-MM-DD",
          "rule": {
            "required": true
          },
          "unReset": true
        }
      ]
    },
    {
      "title": "检测详情",
      "detail": [
        {
          "title": "外观",
          "type": "input",
          "key": "surface",
          "rule": {
            "required": true
          },
          "defaultValue": "无色或浅黄色透明液体"
        },
        {
          "title": "总酸度",
          "type": "input",
          "key": "acidity",
          "rule": {
            "type": "float",
            "required": true
          },
          "block": "以HCl计",
          "suffix": "%"
        },
        {
          "title": "检验员",
          "type": "input",
          "key": "operator",
          "span": 8,
          "rule": {
            "required": true
          },
          "unReset": true
        },
        {
          "title": "检验结论",
          "type": "switch",
          "key": "result",
          "checkedChildren": "合格",
          "unCheckedChildren": "不合格",
          "placeholder": "请在此填入检验结论",
          "span": 8,
          "rule": {
            "required": true
          },
          "defaultValue": "1"
        },
        {
          "title": "备注",
          "type": "input.textarea",
          "key": "remark",
          "placeholder": "请在此填入备注信息",
          "span": 8,
          "rule": {
            "required": true
          }
        }
      ]
    }
  ]
